<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

{% block body %}
    <div class="col-md-12">
        <br>

        {% if validado == true %}
            <div class="alert" style="background-color: #4cae4c;color: #ffffff"  role="alert">
                Su cuenta esta validada
            </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Validar cuenta completando los datos aqui!
            </div>
        {% endif %}
    <div class="row">
        <div class="col-sm-6">

            <div class="card">
                <div class="card-header">Mi Credito</div>
                <div class="card-body" align="center">
                    <h5 class="card-title"></h5>
                    <h1 class="centered ng-binding " style="color:green;" >10.000&nbsp; ARS</h1>
                    <br>
                    <button class="btn btn-secundary" >
                        <i class="fas fa-dollar-sign"></i> Solicitar Credito
                    </button>

                </div>
            </div>

        </div>
        <div class="col-sm-6">
            <div class="card">
                <div class="card-header">Estado de la cuenta</div>
                <div class="card-body" align="center">
                    {% if validado == true %}
                        <h6 class="card-title" >Cuenta Aprobada</h6>
                        <div class="center" >

                            <i class="fas fa-user-check fa-2x" style="color: #4cae4c" ></i>
                        </div>
                    {% else %}
                        <h6 class="card-title" >Falta Aprobar cuenta</h6>
                        <div class="center" >

                            <i class="fas fa-user-check fa-2x" style="color: #d58512" ></i>
                        </div>
                    {% endif %}


                    <br>
                    <button class="btn btn-secundary" >
                        <i class="fas fa-dollar-sign"></i> Aprobar Solicitud
                    </button>
                </div>
            </div>
        </div>
    </div>
        <br>
    </div>
{% endblock %}